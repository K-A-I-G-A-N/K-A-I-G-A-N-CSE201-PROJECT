<project name="201AppCatalogue" default="build" basedir=".">

    <!-- Folders -->
    <property name="src.dir" value="src"/>
    <property name="build.dir" value="bin"/>

    <!-- Main class -->
    <property name="main.class" value="Moderator.Jumper"/>

    <!-- Clean -->
    <target name="clean">
        <delete dir="${build.dir}"/>
    </target>

    <!-- Build / Compile -->
    <target name="build">
        <mkdir dir="${build.dir}"/>
        <javac includeantruntime="false"
               srcdir="${src.dir}"
               destdir="${build.dir}"/>
    </target>

    <!-- Run program -->
    <target name="run" depends="build">
        <java classname="${main.class}" fork="true">
            <classpath>
                <pathelement location="${build.dir}"/>
            </classpath>
        </java>
    </target>

</project>
